import SwiftUI

struct DailyView: View {
    var currDay: Date
    
    var body: some View {
        VStack {
            Text(currDay.formatted(date: .complete, time: .omitted))
                .font(.title)
                .fontWeight(.bold)
            Spacer()
        }
    }
}

struct DailyView_Previews: PreviewProvider {
    static var previews: some View {
        DailyView(currDay: Date.now)
    }
}
